@using EntityLayer.Concrete
@model List<Team>

<div class="team" id="team">
	<div class="container">
		<h3 class="tittle">Takımımız</h3>
		<p class="heading-btm-w3ls">Birbirinden farklı konularda donanımlı ekip arkadaşlarımız.</p>
		<div class="wthree_team_grids">

			@foreach(var item in Model) {

				<div class="col-md-3 wthree_team_grid">
					<div class="hovereffect">
						<img src="@item.PersonImageUrl" alt=" " class="img-responsive" />
						<div class="overlay">
							<h6>@item.PersonTitle</h6>
							<div class="rotate">
								<p class="group1">
									<a href="@item.PersonTwitterUrl">
										<i class="fa fa-twitter"></i>
									</a>
									<a href="@item.PersonFacebookUrl">
										<i class="fa fa-facebook"></i>
									</a>
								</p>
								<hr>
								<hr>
								<p class="group2">
									<a href="@item.PersonInstagramUrl">
										<i class="fa fa-instagram"></i>
									</a>
									<a href="@item.PersonWebsiteUrl">
										<i class="fa fa-dribbble"></i>
									</a>
								</p>
							</div>
						</div>
					</div>
					<h4>@item.PersonName</h4>
					<p>@item.PersonTitle</p>
				</div>
			}
			<div class="clearfix"> </div>
		</div>
	</div>
</div>