@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Personel Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Adı - Soyadı<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Ad Soyad" asp-for="PersonName">
                    <br>
                    <span asp-validation-for="PersonName" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Ünvan<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Ünvan" asp-for="PersonTitle">
                    <br>
                    <span asp-validation-for="PersonTitle" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel URL<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel URL" asp-for="PersonImageUrl">
                    <br>
                    <span asp-validation-for="PersonImageUrl" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Facebook URL" asp-for="PersonFacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Instagram URL" asp-for="PersonInstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Twitter</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Twitter URL" asp-for="PersonTwitterUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Website</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Website URL" asp-for="PersonWebsiteUrl">
                </div>
                <button type="submit" class="btn btn-outline-primary">Ekle</button>
            </form>
        </div>
    </div>
</div>