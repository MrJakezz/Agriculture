@model AgriculturePresentation.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Mail Adresi" asp-for="Mail">
                    <br>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Telefon Numarası</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Telefon Numarası" asp-for="PhoneNumber">
                    <br>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Şifre" asp-for="Password">
                    <br>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre Onay</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Şifre Onay" asp-for="ConfirmPassword">
                    <br>
                </div>
                <br>
                <button type="submit" class="btn btn-outline-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>

