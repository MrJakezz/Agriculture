@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x.AddressID)
                    <label for="exampleInputName1">Açıklama 1<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Ad Soyad" asp-for="AddressDescription1">
                    <br>
                    <span asp-validation-for="AddressDescription1" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama 2<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Ünvan" asp-for="AddressDescription2">
                    <br>
                    <span asp-validation-for="AddressDescription2" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama 3<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel URL" asp-for="AddressDescription3">
                    <br>
                    <span asp-validation-for="AddressDescription3" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama 4<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel URL" asp-for="AddressDescription4">
                    <br>
                    <span asp-validation-for="AddressDescription4" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Harita Bilgisi<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel URL" asp-for="AddressMapInfo">
                    <br>
                    <span asp-validation-for="AddressMapInfo" class="text alert-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>