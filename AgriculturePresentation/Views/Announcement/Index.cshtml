@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Aktiflik Durumu</th>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.AnnouncementStatus == true)
                                    {
                                        <div class="alert alert-success" role="alert">
                                            Şu anda aktif.
                                        </div>
                                    }

                                    else
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            Şu anda pasif.
                                        </div>
                                    }
                                </td>
                                <td>@item.AnnouncementID</td>
                                <td>@item.AnnouncementTitle</td>
                                <td>@item.AnnouncementDate</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@item.AnnouncementID" class="btn btn-outline-warning">Güncelle</a></td>
                                <td>
                                    @if(item.AnnouncementStatus == false)
                                    {
                                        <a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementID" class="btn btn-outline-primary">Aktifleştir</a>
                                    }

                                    else
                                    {
                                        <a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementID" class="btn btn-outline-secondary">Pasifleştir</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br>
                <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>