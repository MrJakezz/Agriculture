@model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Admin Girişi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Kullanıcı Adı" asp-for="AdminUsername">
                    <br>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre<font color="red">*</font></label>
                    <input type="password" class="form-control" id="exampleInputName1" placeholder="Şifre" asp-for="AdminPassword">
                    <br>
                </div>
                <button type="submit" class="btn btn-outline-primary">Ekle</button>
            </form>
        </div>
    </div>
</div>
