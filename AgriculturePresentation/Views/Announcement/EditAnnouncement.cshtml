@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AnnouncementID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık<font color="red">*</font></label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="AnnouncementTitle">
                    <br>
                    <span asp-validation-for="AnnouncementTitle" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama<font color="red">*</font></label>
                    <textarea class="form-control" cols="30" rows="5" placeholder="Açıklama" asp-for="AnnouncementDescription"></textarea>
                    <br>
                    <span asp-validation-for="AnnouncementDescription" class="text alert-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih<font color="red">*</font></label>
                    <input type="date" class="form-control" id="exampleInputEmail3" placeholder="Görsel URL" asp-for="AnnouncementDate">
                    <br>
                    <span asp-validation-for="AnnouncementDate" class="text alert-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-primary">Ekle</button>
            </form>
        </div>
    </div>
</div>